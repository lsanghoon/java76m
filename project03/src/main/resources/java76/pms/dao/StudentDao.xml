<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="java76.pms.dao.StudentDao">

	<resultMap type="student" id="studentMap">
		<id column="sno" property="no" />
	</resultMap>
	<select id="selectList" resultMap="studentMap" parameterType="Map">
		select sno, name, email, tel, cid, photo
		from student
		order by
		<choose>
			<when test="keyword == 'email'">email </when>
			<when test="keyword == 'tel'">tel </when>
			<otherwise>sno </otherwise>
		</choose>
		<choose>
			<when test="align == 'asc'">asc </when>
			<otherwise>desc </otherwise>
		</choose>
		limit #{startIndex}, #{length}
	</select>

	<insert id="insert" parameterType="student">
		insert into
		student(name,email,tel,cid,photo)
		values(#{name},#{email},#{tel},#{cid},#{photo})
	</insert>

	<delete id="delete" parameterType="int">
		delete from student where
		sno=#{no}
	</delete>

	<update id="update" parameterType="student">
		update student set
		name=#{name}, 
		email=#{email}, 
		tel=#{tel}, 
		cid=#{cid}
		<choose>
		<when test="photo != null">,photo=#{photo}</when>
		<otherwise> </otherwise>
		</choose>
		where sno=#{no}
	</update>
	
	<select id="selectOne" resultMap="studentMap" parameterType="int">
		select sno, name, email, tel, cid, photo
		from student
		where sno=#{no}
	</select>
	
	<select id="login" resultType="student" parameterType="map">
		select sno, name, email, tel, cid, photo
		from student
		where email=#{email} and pwd=#{password}
	</select>
</mapper>